<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Category List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Category List</h2>
    
    <form action="/add" method="POST" class="mb-3">
      <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Enter Category" required>
        <button class="btn btn-success">Add</button>
      </div>
    </form>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Category Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(cat => { %>
          <tr>
            <td><%= cat.id %></td>
            <td><%= cat.name %></td>
            <td>
              <a href="/update/<%= cat.id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/delete/<%= cat.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
